<h1>Lịch sử gửi</h1>
<table class="table table-hover " style="min-height: 320px;">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Gửi đến</th>
      <th scope="col">Tiêu đề</th>
      <th scope="col">Trạng thái</th>
      <th scope="col">Thời gian gửi</th>
      <th scope="col">Hành động</th>
    </tr>
  </thead>
  <tbody>
    <% histories.forEach((item, index) => { %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= item.send_to %></td>
      <td><%= item.title %></td>
      <td><%= item.status ? 'Đã Xem': 'Chưa Xem' %></td>
      <td><%= moment(item.created_at).utcOffset(7).format('DD/MM/YYYY HH:mm:ss')  %></td>
      <td>
        <a href="/send-mail/history/<%= item.id %> " class="btn btn-primary"
          >Xem chi tiết</a
        >
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
<div class="d-flex justify-content-between">
  <a href="/send-mail" class="btn btn-primary px-4 align-self-start">Gửi mail</a>


  <ul class="pagination">
    <li class="page-item <%= +req.query.page > 1 ? "" : "disabled" %>"><a class="page-link" href="?page=<%= +req.query.page-1 %>">Previous</a></li>
    <% for( let index = 1; index <= totalPage; index++ ) { %>
    <li class="page-item <%= +req.query.page === +index ? "active" : "" %>" >
      <a class="page-link" href="?page=<%= index %>"><%= index %></a>
    </li>
    <% } %>
    <li class="page-item <%= +req.query.page < totalPage ? "" : "disabled" %>"><a class="page-link" href="?page=<%= +req.query.page+1 %>">Next</a></li>
  </ul>
  
</div>

