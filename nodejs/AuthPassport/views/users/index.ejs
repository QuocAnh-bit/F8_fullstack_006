<h1>Danh sách người dùng</h1>
<a href="/users/add" class="btn btn-primary mb-2">Thêm mới</a>
<table class="table table-bordered">
  <thead>
    <tr>
      <th width="5%">STT</th>
      <th>Tên</th>
      <th>Email</th>
      <th>Thời gian</th>
      <th width="12%">Phân Quyền</th>
      <th width="5%">Sửa</th>
      <th width="5%">Xóa</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach((user, index) => { %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at %></td>
      <td>
        <a href="/users/permission/<%= user.id %>" class="btn btn-warning"
          >Phân quyền</a
        >
      </td>
      <td>
        <a href="/users/edit/<%= user.id %>" class="btn btn-warning">Sửa</a>
      </td>
      <td>
        <form
          action="/users/delete/<%= user.id %>"
          onsubmit="return confirm('Bạn có chắc?')"
          method="post"
        >
          <button class="btn btn-danger">Xóa</button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
