<div class="container py-1">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4 ">
          Cài đặt người dùng
        </nav>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img
              src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp"
              alt="avatar"
              class="rounded-circle img-fluid"
              style="width: 150px"
            />
            <h5 class="my-3"><%= user.name %></h5>
            <p class="text-muted mb-1">Full Stack Developer</p>
            <p class="text-muted mb-4">Bay Area, San Francisco, CA</p>
            <div class="d-flex justify-content-center mb-2">
              <form action="/auth/logout" method="POST">
                <button type="submit" class="btn btn-primary">
                  Đăng Xuất
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <form action="user/editName" method="POST">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <label class="mb-0 py-2">Full Name</label>
              </div>
              <div class="col-sm-9 bof">
                <input
                  class="text-muted w-100 border-0 py-2 px-1"
                  value="<%= user.name %>"
                  name="name"
                />
                <small id="nameHelp" class="form-text text-danger">
                  <%- req?.errors ? req.errors.name : "" %></small
                >
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <label class="mb-0 py-2">Email</label>
              </div>
              <div class="col-sm-9 bof">
                <input
                  class="text-muted w-100 border-0 py-2 px-1"
                  value="<%= user.email %>"
                  name="email"
                />
                <small id="nameHelp" class="form-text text-danger">
                  <%- req?.errors ? req.errors.email : "" %></small
                >
              </div>
            </div>
            <hr />
            <div class="row d-flex justify-content-between align-items-center  px-2">
              <div class=" col-sm-9 text-success fw-bold">
              <% if (mess.length) { %>
               <%= mess %> <i class="fa-solid fa-check fs-4 ml-2"></i>
                <% } %>
              </div>
              <div class="col-sm-2">
                <a href="/" class="btn btn-primary "> Hủy </a>
                <button type="submit" class="btn btn-primary ">Lưu</button>
              </div>
              </div>
            </div>
          </div>
        </form>
        <form action="user/editPass" method="POST">
          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <label class="mb-0 py-2">Mật khẩu cũ</label>
                </div>
                <div class="col-sm-9 bof">
                  <input
                    type="password"
                    class="text-muted w-100 border-0 py-2 px-1"
                    name="oldPass"
                  />
                  <small id="nameHelp" class="form-text text-danger">
                    <%- req?.errors ? req.errors.oldPass : "" %></small
                  >
                </div>
              
              </div>
              <hr />
              <div class="row">
                <div class="col-sm-3">
                  <label class="mb-0 py-2">Mật khẩu mới</label>
                </div>
                <div class="col-sm-9 bof">
                  <input
                    type="password"
                    class="text-muted w-100 border-0 py-2 px-1"
                    name="password"
                    value="<%= req.old?.password %>"
                  />
                  <small id="nameHelp" class="form-text text-danger">
                    <%- req?.errors ? req.errors.password : "" %></small
                  >
                </div>
              
              </div>
              <hr />
              <div class="row">
                <div class="col-sm-3">
                  <label class="mb-0 py-2">Nhập lại mật khẩu</label>
                </div>
                <div class="col-sm-9 bof">
                  <input
                    type="password"
                    class="text-muted w-100 border-0 py-2 px-1"
                    name="passwordConfirm"
                  />
                  <small id="nameHelp" class="form-text text-danger">
                    <%- req?.errors ? req.errors.passwordConfirm : "" %></small
                  >
                </div>
              </div>
              <hr />
              <div class="row d-flex justify-content-end gap-2 px-2">
                  <a href="/" class="btn btn-primary col-sm-1"> Hủy </a>
                  <button type="submit" class="btn btn-primary col-sm-1" >Lưu</button>
                </div>
              </div>
            </div>
          </form>

          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Tên thiết bị</th>
                <th scope="col">Trình duyệt</th>
                <th scope="col">Hệ điều hành</th>

                <th scope="col">Thời gian đăng nhập</th>

                <th scope="col">Thời gian hoạt động</th>
              </tr>
            </thead>
            <tbody>
           
          
            </tbody>
          </table>
        </div>
      
      </div>
    </div>
  </div>


